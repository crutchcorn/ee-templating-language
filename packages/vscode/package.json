{
	"private": true,
	"name": "doodl-vscode",
	"version": "0.0.1",
	"categories": [
		"Programming Languages"
	],
	"displayName": "Doodl Language Features",
	"description": "Doodl Language Features",
	"repository": {
		"type": "git",
		"url": "https://github.com/crutchcorn/doodl.git"
	},
	"engines": {
		"vscode": "^1.104.0"
	},
	"activationEvents": [
		"onLanguage:doodl"
	],
	"main": "./dist/client.js",
	"contributes": {
		"languages": [
			{
				"id": "doodl",
				"icon": {
					"light": "images/ee.png",
					"dark": "images/ee.png"
				},
				"extensions": [
					".dood"
				]
			}
		],
		"grammars": [
			{
				"language": "doodl",
				"scopeName": "source.doodl",
				"path": "./syntaxes/doodl.tmLanguage.json",
				"embeddedLanguages": {
					"source.doodl": "doodl",
					"text.html.derivative": "html",
					"text.html.markdown": "markdown",
					"source.ts": "typescript",
					"source.css": "css",
					"source.css.scss": "scss",
					"source.css.less": "less",
					"source.sass": "sass",
					"source.stylus": "stylus",
					"source.postcss": "postcss",
					"source.vue": "vue",
					"source.coffee": "coffee",
					"source.json": "json",
					"source.json.comments": "jsonc",
					"source.json5": "json5",
					"source.yaml": "yaml",
					"source.toml": "toml",
					"source.graphql": "graphql"
				}
			}
		]
	},
	"scripts": {
		"build": "node scripts/build.js",
		"watch": "npm run build -- --watch",
		"pack": "npm run build && vsce package --pre-release",
		"release": "npm run build && vsce publish --pre-release"
	},
	"devDependencies": {
		"doodl-language-server": "workspace:*",
		"@types/vscode": "^1.104.0",
		"@volar/language-server": "~2.4.23",
		"@volar/vscode": "~2.4.23",
		"esbuild": "^0.25.10",
		"vsce": "^2.15.0",
		"vscode-languageclient": "^9.0.1"
	}
}
