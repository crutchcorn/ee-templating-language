{
	"private": true,
	"name": "doodl-vscode",
	"version": "0.0.1",
	"categories": [
		"Programming Languages"
	],
	"displayName": "Doodl Language Features",
	"description": "Doodl Language Features",
	"repository": {
		"type": "git",
		"url": "https://github.com/crutchcorn/doodl.git"
	},
	"engines": {
		"vscode": "^1.104.0"
	},
	"activationEvents": [
		"onLanguage:doodl"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Doodl",
				"properties": {
					"doodl.server.enable": {
						"type": "boolean",
						"default": true,
						"description": "Enable experimental IntelliSense support for Doodl files."
					},
					"doodl.trace.server.verbosity": {
						"enum": [
							"off",
							"messages",
							"compact",
							"verbose"
						],
						"default": "off",
						"description": "Trace Doodl language server requests in the output console."
					},
					"doodl.trace.server.format": {
						"enum": [
							"text",
							"json"
						],
						"default": "text",
						"description": "How to format traced Doodl language server requests."
					}
				}
			}
		],
		"languages": [
			{
				"id": "doodl",
				"icon": {
					"light": "images/doodl_light.png",
					"dark": "images/doodl_dark.png"
				},
				"extensions": [
					".dood"
				]
			}
		],
		"grammars": [
			{
				"language": "doodl",
				"scopeName": "source.doodl",
				"path": "./syntaxes/doodl.tmLanguage.json",
				"embeddedLanguages": {
					"source.doodl": "doodl",
					"text.html.derivative": "html",
					"text.html.markdown": "markdown",
					"source.ts": "typescript",
					"source.css": "css",
					"source.css.scss": "scss",
					"source.css.less": "less",
					"source.sass": "sass",
					"source.stylus": "stylus",
					"source.postcss": "postcss",
					"source.vue": "vue",
					"source.coffee": "coffee",
					"source.json": "json",
					"source.json.comments": "jsonc",
					"source.json5": "json5",
					"source.yaml": "yaml",
					"source.toml": "toml",
					"source.graphql": "graphql"
				}
			}
		],
		"typescriptServerPlugins": [
			{
				"name": "doodl-typescript-plugin",
				"enableForWorkspaceTypeScriptVersions": true,
				"configNamespace": "typescript",
				"languages": [
					"doodl"
				]
			}
		]
	},
	"scripts": {
		"build": "node scripts/build.mjs",
		"watch": "npm run build -- --watch",
		"pack": "npm run build && vsce package --pre-release",
		"release": "npm run build && vsce publish --pre-release"
	},
	"dependencies": {
		"doodl-typescript-plugin": "workspace:*",
		"doodl-language-server": "workspace:*",
		"doodl-language-service": "workspace:*",
		"@volar/language-server": "~2.4.23",
		"@volar/vscode": "~2.4.23"
	},
	"devDependencies": {
		"@types/vscode": "^1.104.0",
		"esbuild": "^0.25.10",
		"vsce": "^2.15.0"
	}
}
