{
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "build": "pnpm run build:language-service && pnpm run build:typescript-plugin && pnpm run build:vscode",
    "build:language-service": "cd ./packages/language-service && pnpm build",
    "build:typescript-plugin": "cd ./packages/typescript-plugin && pnpm build", 
    "build:vscode": "cd ./packages/vscode && pnpm build",
    "watch": "cd ./packages/vscode && pnpm watch",
    "pack": "cd ./packages/vscode && pnpm pack",
    "release": "cd ./packages/vscode && pnpm release",
    "format": "prettier --write .",
    "test:sherif": "sherif",
    "test:knip": "knip"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "knip": "^5.64.2",
    "prettier": "^3.6.2",
    "sherif": "^1.6.1",
    "typescript": "^5.9.2",
    "uuid": "^13.0.0"
  }
}
